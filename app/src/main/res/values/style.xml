<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeNotActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarAnim">
        <item name="android:windowEnterAnimation">@anim/toolbar_in</item>
        <item name="android:windowExitAnimation">@anim/toolbar_out</item>
    </style>

    <style name="ToolbarAnimReverse">
        <item name="android:windowEnterAnimation">@anim/toolbar_out</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>
